- if @tag
  - if current_user and not current_user.follows_tag?(@tag)
    = link_to 'Follow', follow_tag_path(@tag)
  .items
    - @tag.items.each do |item|
      .item
        = item.name
        = item.price
        = item.user.name
        .tags
          - item.tags.each do |tag|
            .tag= tag.name
- else
  Not found any items for
  = @tag_name

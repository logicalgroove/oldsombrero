- if @user
  - if current_user and not current_user.follows_user?(@user)
    = link_to 'Follow', follow_user_path(@user)
  %h3 User
  %p
    User: #{@user.name}
  %p
    Email: #{@user.email if @user.email}
  .items
    - @user.items.each do |item|
      .item
        = item.name
        = item.price
        = item.user.name
        .tags
          - item.tags.each do |tag|
            .tag= tag.name
- else
  There is no such user

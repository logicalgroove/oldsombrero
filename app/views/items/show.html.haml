%p#notice= notice

%p
  %b Name:
  = @item.name
%p
  %b Price:
  = @item.price
%p
  %b Period:
  = @item.period
%p
  %b Description:
  = @item.description

- if @item.image
  %p.image= image_tag @item.image.url

- if current_user and current_user.owns?(@item.id)
  = link_to 'Edit', edit_item_path(@item)
\|
= link_to 'Back', items_path
